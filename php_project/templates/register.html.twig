{% extends "master.html.twig" %}

{% block title %}Register{% endblock %}

{% block addhead %}

{% endblock addhead%}


{% block content %}

    {% if errorList %}
        <ul class="error">
            {% for error in errorList %}
                <li>{{error}}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form method="post">
        Email: <input type="email" name="email" value={{values.email}}><br />
        <span id="emailTaken" class="error"></span><br>
        Password:  <input type="password" name="password1" value=""><br />
        Password(repeated):  <input type="password" name="password2" value=""><br />
        <input type="submit" value="Register">
    </form>

{% endblock content %}

{% block addfoot %}
    <script>
        $(document).ready(function () {
            $("input[name=email]").keyup(function () {
                var email = $("input[name=email]").val();
                $("#emailTaken").load("/isemailregistered/" + email);
            });
        });
    </script>
{% endblock addfoot %}