{% extends "master.html.twig" %}

{% block extrastyles %}  
    <style>
        .affix {top: 0; width: 100%; z-index: 9999 !important;}
        .affix + .container-fluid {padding-top: 70px; }
        
        .card 
        {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            border-radius: 50px;
            height: 100%;
            width: 100%;
        }
     
        .card:hover {  box-shadow: 0 18px 26px 0 rgba(0,0,0,0.2); }

        img {  border-radius: 50px 50px 50px 50px; }


        .row {  display: flex;  }
        .column { flex: 50%;  }
    </style>
    
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/solid.css" integrity="sha384-+0VIRx+yz1WBcCTXBkVQYIBVNEFH1eP6Zknm16roZCyeNg2maWEpk/l/KsyFKs7G" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/fontawesome.css" integrity="sha384-jLuaxTTBR42U2qJ/pm4JRouHkEDHkVqH0T1nyQXn1mZ7Snycpf6Rl25VBNthU4z0" crossorigin="anonymous">

{% endblock %}

{% block title %}
    Transaction History
{% endblock %}


{% block content %}

    
    
    {% if items %}    
        
        {% for book in books %}
          

            
            <div class="row">
                <div class="col-sm-4">
                    <div class="card">
                        <img width="190px" src="{{ book.image }}" alt="Book">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div>
                        <h3>{{ book.title }}</h3>
                        <h3>{{ book.author }}</h3>
                        <p>{{ book.description }}</p>
                        <p>{{ book.ISBN }}<p>
                    </div>
                </div>

                <div style="font-size:20px" class="col-sm-4">
                    <b >{{ book.price }}</b>
                    <br><br>
                    <button><a href="item/edit/{{ book.id }}">Edit</a></button>
                </div>
            </div>
            
        {% endfor %} 
    
    {% else %}
    
        <P>no sales found</p>
        
    {% endif %}
    
    

    
    
{% endblock content %}

